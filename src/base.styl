@import 'nib'
nested-html5()

*
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color rgba(0,0,0,0)

html, body
  font-family 'HelveticaNeue-Light'
  margin 0px
  min-height 100%
  padding 0px
  position relative

h1, h2, h3, h4, h5
  font-weight 100

::-webkit-scrollbar
  display none
  width 0 !important
